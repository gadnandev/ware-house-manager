<Window x:Class="WareHouse_Manager.UC.NotificationUC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WareHouse_Manager.UC"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Name="Notification"
        Title="{Binding Title}" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <local:ControlBarUC 
            Grid.Row="0" 
            Tag="{Binding Title,ElementName=Notification}">
        </local:ControlBarUC>
        <TextBlock 
            Grid.Row="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="Green"
            Text="{Binding NotificationContent}"></TextBlock>
    </Grid>
</Window>
